{
  "kind": "collectionType",
  "collectionName": "podcasts",
  "info": {
    "singularName": "podcast",
    "pluralName": "podcasts",
    "displayName": "Podcast",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "videoIncluded": {
      "type": "boolean",
      "default": true
    },
    "description": {
      "type": "text"
    },
    "publishDate": {
      "type": "date"
    },
    "hostingPodcastName": {
      "type": "string",
      "default": "Sunn Fornuft!"
    },
    "podcastURL": {
      "type": "string",
      "required": true
    },
    "egenPodcast": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "totalDuration": {
      "type": "string",
      "default": "00:00:00",
      "regex": "^\\d+:[0-5]\\d:[0-5]\\d$"
    }
  }
}
